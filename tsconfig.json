{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/features/*": ["features/*"],
      "@/utils/*": ["utils/*"],
      "@/hooks/*": ["hooks/*"],
      "@/slices/*": ["slices/*"],
      "@/servers/*": ["servers/*"],
      "@/models/*": ["models/*"],
      "@/middlewares/*": ["middlewares/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/api/search/[keyword].js",
    "pages/api/review/[id].js",
    "pages/api/book/[id].js",
    "pages/api/account/signup.js",
    "pages/api/account/login.js",
    "pages/api/account/index.js",
    "utils/dbConnect.js",
    "middlewares/userExtractor.js",
    "models/User.js",
    "models/Review.js",
    "models/BookList.js",
    "models/Book.js"
  ],
  "exclude": ["node_modules"]
}
